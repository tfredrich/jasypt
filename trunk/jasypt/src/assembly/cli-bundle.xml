<?xml version="1.0"?>
<assembly>

  <id>cli-bundle</id>
  
  <formats>
    <format>jar</format>
  </formats>
  
  <includeBaseDirectory>false</includeBaseDirectory>
  
  <fileSets>
    <fileSet>
      <directory>${basedir}/target/classes</directory>
      <outputDirectory></outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
  </fileSets>
  
  <dependencySets>
    <dependencySet>
      <unpack>true</unpack>
      <outputDirectory></outputDirectory>
      <outputFileNameMapping></outputFileNameMapping>
      <scope>runtime</scope>
    </dependencySet>
  </dependencySets>
  
</assembly>
